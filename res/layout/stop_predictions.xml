<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/txt_stop_name"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:layout_centerInParent="true"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	<TextView android:id="@+id/txt_stop_dir" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:layout_centerInParent="true" android:textAppearance="?android:attr/textAppearanceLarge" />
	<CheckBox android:id="@+id/predictions_showall" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/prediction_showall_toggle" />
	<ListView android:id="@id/android:list" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/txt_stop_error"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:layout_centerInParent="true"
		android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
