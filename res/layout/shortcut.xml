<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

<TextView
	android:id="@+id/shortcut_stop"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:textAppearance="?android:attr/textAppearanceLarge"
	android:maxLines="3" android:paddingBottom="40sp"/>
<LinearLayout
	android:orientation="vertical" android:padding="1sp" android:layout_height="fill_parent" android:layout_width="fill_parent">
	<TextView
		android:lines="1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/shortcut_stopname"
		android:gravity="left"/>
	<EditText
		android:lines="1"
		android:id="@+id/shortcut_stopname"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:hint="@string/shortcut_stopnamehint"
		android:scrollHorizontally="true"
		android:gravity="right"/>
</LinearLayout>
<Button
	android:id="@+id/shortcut_submit"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:text="@string/shortcut_submit"/>
</LinearLayout>
